= form_for @transaction do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :patron_id
    = f.number_field :patron_id
  .field
    = f.label :book_id
    = f.number_field :book_id
  .field
    = f.label :checkout_date
    = f.datetime_select :checkout_date
  .field
    = f.label :checkin_date
    = f.datetime_select :checkin_date
  .actions
    = f.submit 'Save'

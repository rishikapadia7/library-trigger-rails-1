%html
  %head
    %title Library
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %nav
      %ul
        %li= link_to t('links.home.link_name'),root_path
        %li= link_to t('links.books.link_name'),books_path
        %li= link_to t('links.patrons.link_name'),patrons_path
        %li= link_to t('links.checkout.link_name'),checkout_path
        %li= link_to t('links.checkin.link_name'),checkin_path
        %li= link_to t('links.history.link_name'),history_path
    %p= flash[:notice] if flash[:notice]
    = yield
